                    <option value="arathi"></option>
                    <option value="archimonde"></option>   
                    <option value="dalaran"></option>
                    <option value="drakthul"></option>
                    <option value="eitrigg"></option> 
                    <option value="eldrethalas"></option> 
                    <option value="elune"></option>  
                    <option value="garona"></option> 
                    <option value="hyjal"></option>   
                    <option value="illidan"></option>
                    <option value="khaz-modan"></option>
                    <option value="krasus"></option>
                    <option value="medivh"></option>
                    <option value="naxxramas"></option>
                    <option value="rashgarroth"></option>
                    <option value="sargeras"></option>
                    <option value="sinstralis"></option>
                    <option value="suramar"></option>
                    <option value="uldaman"></option>
                    <option value="varimathras"></option>
                    <option value="ysondre"></option>
                </datalist>




                {# <input type="text" name="local" id="local" placeholder="localitÃ©" required> #}
                <input type="text" list="local" name="local" required placeholder="localisation"/>
                <datalist id="local" name="local">
                    <option value="fr_fr"></option>
                    <option value="en_en"></option>
                </datalist>
                <button type="submit" class="rechercher">rechercher</button>
            </form>

        </header>

        <main class="main1">
        {% block body %}{% endblock %}
        {% block javascripts %}

        <script>
        $("#cache").click(function(){
            $("#toggle").slideToggle("slow");
        
        })
     </script>   
        {% endblock %}
        </main> 
    </body>
</html>
